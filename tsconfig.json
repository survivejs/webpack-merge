{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es5", "es6"],
    "target": "es5",
    "strict": true,
    "sourceMap": true,
    "outDir": "lib",
    "typeRoots": [
      "node_modules/@types"
    ],
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
  },
  "include": [
    "src/**/*.ts"
  ]
}
